{
  "name": "dione",
  "displayName": "Dione",
  "repository": {
    "type": "git",
    "url": "https://github.com/dioneapp/dioneapp.git"
  },
  "version": "0.0.1",
  "description": "Explore, Install, Innovate â€” in 1 Click.",
  "main": "./out/main/index.js",
  "author": "AI Hispano",
  "homepage": "https://getdione.app",
  "scripts": {
    "format": "biome format --write ./src",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --noSandbox",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win --publish never",
    "build:mac": "electron-vite build && electron-builder --mac --publish never",
    "build:linux": "electron-vite build && electron-builder --linux --publish never",
    "deploy": "npm run build && electron-builder --win --publish always"
  },
  "build": {
    "appId": "dione",
    "productName": "Dione",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "./resources/icon.ico",
      "uninstallerIcon": "./resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Dione",
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@supabase/supabase-js": "^2.49.4",
    "@tailwindcss/postcss": "^4.1.5",
    "cors": "^2.8.5",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "framer-motion": "^12.9.4",
    "get-port": "^7.1.0",
    "isomorphic-git": "^1.30.1",
    "node-vibrant": "^4.0.3",
    "pidtree": "^0.6.0",
    "postcss": "^8.5.3",
    "react-router-dom": "^7.5.3",
    "semver": "^7.7.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "electron": "^36.1.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.4"
  }
}
